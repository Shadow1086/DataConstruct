{
  // C/C++ 编译器配置（macOS）
  "C_Cpp_Runner.cCompilerPath": "gcc",
  "C_Cpp_Runner.cppCompilerPath": "g++",
  "C_Cpp_Runner.debuggerPath": "lldb",
  "C_Cpp_Runner.cStandard": "c11",
  "C_Cpp_Runner.cppStandard": "c++11",
  "C_Cpp_Runner.useMsvc": false,
  
  // 编译警告设置
  "C_Cpp_Runner.warnings": [
    "-Wall",
    "-Wextra",
    "-Wpedantic",
    "-Wshadow",
    "-Wformat=2",
    "-Wcast-align",
    "-Wconversion",
    "-Wsign-conversion",
    "-Wnull-dereference"
  ],
  "C_Cpp_Runner.enableWarnings": true,
  "C_Cpp_Runner.warningsAsError": false,
  
  // 编译和链接参数
  "C_Cpp_Runner.compilerArgs": [],
  "C_Cpp_Runner.linkerArgs": [],
  
  // 包含路径配置
  "C_Cpp_Runner.includePaths": [],
  "C_Cpp_Runner.includeSearch": [
    "*",
    "**/*"
  ],
  "C_Cpp_Runner.excludeSearch": [
    "**/build",
    "**/build/**",
    "**/.*",
    "**/.*/**",
    "**/.vscode",
    "**/.vscode/**"
  ],
  
  // 调试和优化选项
  "C_Cpp_Runner.useAddressSanitizer": false,
  "C_Cpp_Runner.useUndefinedSanitizer": false,
  "C_Cpp_Runner.useLeakSanitizer": false,
  "C_Cpp_Runner.showCompilationTime": false,
  "C_Cpp_Runner.useLinkTimeOptimization": false,
  
  // C/C++ IntelliSense 配置
  "C_Cpp.default.cppStandard": "c++11",
  "C_Cpp.default.cStandard": "c11",
  "C_Cpp.default.intelliSenseMode": "macos-clang-arm64",
  
  // 编辑器通用设置
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.formatOnSave": false,
  "editor.rulers": [80, 120],
  
  // 文件设置
  "files.encoding": "utf8",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    // 编译产物和系统文件（原有配置）
    "**/*.exe": true,
    "**/*.o": true,
    "**/*.out": true,
    "**/.DS_Store": true,
    // 新增隐藏规则
    "**/*.class": true,        // 所有 .class 文件（Java 编译产物）
    "**/bin/**": true,         // bin/ 目录
    "**/LICENSE": true,        // LICENSE 文件
    "**/README.md": true,      // README.md 文件
    "**/*.dSYM/**": true,      // 以 .dSYM 结尾的目录（macOS 调试符号目录）
    "**/*.txt": true,          // 所有 .txt 文件
    "**/test[0-9]": true,      // test 后跟单个数字（如 test1）
    "**/test[0-9][0-9]": true, // test 后跟两位数字（如 test01）
    "**/test[0-9][0-9][0-9]": true, // test 后跟三位数字（如 test001）
    "**/[0-9][0-9]": true      // 两位数字文件名（如 02）
  },
  
  // 终端设置
  "terminal.integrated.defaultProfile.osx": "zsh"
}